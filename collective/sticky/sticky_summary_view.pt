<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="plone">

<body>

    <metal:content-core fill-slot="content-core">

      <div class="sticky-items">
        <h2>Featured Stories</h2>
        <tal:block tal:define="folderContents python:context.queryCatalog(is_sticky=True)">
          <metal:block use-macro="context/folder_summary_view/macros/listing" />
        </tal:block>
      </div>

      <p>&nbsp;</p>
      <h2>Recent News</h2>
      <tal:block tal:define="folderContents python:context.queryCatalog(is_sticky=False)">
        <metal:block use-macro="context/folder_summary_view/macros/listing" />
      </tal:block>

    </metal:content-core>

</body>
</html>
